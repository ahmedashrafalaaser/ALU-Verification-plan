
#-------------------------------------------------------------------------------------------------------
comp  : clean vcs
#-------------------------------------------------------------------------------------------------------
vcs   :
	vcs -sverilog -f files.f -cm line+fsm+tgl+branch+cond -timescale=1ns/1ps +vcs+flush+all -full64  -R  +vc  +v2k  -fsdb -debug_all -l vcs_out.log
#-------------------------------------------------------------------------------------------------------
verdi  :
	verdi -f files.f -ssf -sv tb.fsdb &
#-------------------------------------------------------------------------------------------------------
coverage  :
	urg -dir simv.vdb  &
#-------------------------------------------------------------------------------------------------------
cov_verdi  :
	verdi -cov -covdir simv.vdb &
#-------------------------------------------------------------------------------------------------------
clean  :
	 rm  -rf  *~  core  csrc  simv*  vc_hdrs.h  ucli.key  urg* *.log  novas.* *.fsdb* verdiLog  64* DVEfiles *.simv.daidir simv.vdb wave.vcd
#-------------------------------------------------------------------------------------------------------
coverage_html  :
	urg -dir simv.vdb &
#-------------------------------------------------------------------------------------------------------

